{% extends 'base.html.twig' %}
 {% block body %}
     <div class="container">
         <div class="row mt-5">
             <div class="col-sm-8 offset-sm-2">
                 <h1>Première page web avec Symfony</h1>
                 <p>Hello World !!!</p>
             </div>
         </div>
         {% if app.user %}
         <div class="row">
             <div class="col-sm-12 text-center">
                 <a href="{{ path('logout') }}" title="Déconnexion" class="btn btn-warning">Se déconnecter</a>
             </div>
         </div>
             {% else %}
                 <div class="row">
                     <div class="col-sm-6 text-center">
                         <a href="{{ path('user_new') }}" title="Connexion" class="btn btn-primary">S'inscrire</a>
                     </div>
                     <div class="col-sm-6 text-center">
                         <a href="{{ path('login') }}" title="Connexion" class="btn btn-primary">Se connecter</a>
                     </div>
                 </div>
         {% endif %}
     </div>

 {% endblock %}